{
  "name": "electron-vite-tailwind-starter",
  "version": "0.5.0",
  "author": "Grzegorz Leoniec",
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:vite": "vite",
    "dev:electron": "electron src/background.js",
    "build": "run-s build:*",
    "build:vite": "vite build --base=./",
    "build:electron": "electron-builder build",
    "postinstall": "install-app-deps"
  },
  "dependencies": {
    "electron-context-menu": "^2.3.0",
    "electron-window-state": "^5.0.3",
    "lodash-es": "^4.17.15",
    "tailwindcss": "^1.9.4",
    "vue": "^3.0.1"
  },
  "devDependencies": {
    "@vue/compiler-sfc": "^3.0.1",
    "electron": "^11.2.1",
    "electron-builder": "^22.9.1",
    "npm-run-all": "^4.1.5",
    "vite": "^0.20.0"
  },
  "keywords": [
    "electron",
    "vue",
    "vite",
    "tailwind"
  ],
  "main": "src/background.js",
  "build": {
    "directories": {
      "output": "build"
    },
    "mac": {
      "target": "dmg"
    },
    "files": [
      "src/background.js",
      "src/helpers",
      "dist",
      "tailwind.config.js",
      "package.json"
    ]
  }
}
